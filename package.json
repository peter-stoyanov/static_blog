{
  "name": "static-blog",
  "version": "1.1.0",
  "description": "Blog built with modern tooling for old-school static webpage development",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.config.prod.js",
    "lint:js": "./node_modules/.bin/eslint src/js/*.js",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:html": "pa11y-ci ./src/**/*.html",
    "lint": "npm run lint:js && npm run lint:styles && npm run lint:html",
    "start:dev": "webpack-dev-server --config webpack.config.dev.js",
    "start": "webpack --config webpack.config.prod.js && http-server ./dist -o",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peter-stoyanov/static_blog.git"
  },
  "author": "peter stoyanov",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.2",
    "babel-preset-env": "^1.7.0",
    "bulma": "^0.7.5",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^3.0.0",
    "http-server": "^0.11.1",
    "husky": "^3.0.7",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.10.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "pa11y-ci": "^2.1.1",
    "postcss-loader": "^3.0.0",
    "raw-loader": "^0.5.1",
    "release-it": "^12.4.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.8.1",
    "webpack-merge": "^4.1.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "release-it": {
    "non-interactive": true,
    "hooks": {},
    "git": {
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${latestTag}...HEAD",
      "requireCleanWorkingDir": false,
      "requireUpstream": false,
      "requireCommits": false,
      "addUntrackedFiles": false,
      "commit": true,
      "commitMessage": "Release ${version}",
      "commitArgs": "",
      "tag": true,
      "tagName": "${version}",
      "tagAnnotation": "Release ${version}",
      "tagArgs": "",
      "push": false,
      "pushArgs": "--follow-tags",
      "pushRepo": "origin"
    },
    "npm": {
      "publish": false
    }
  }
}
